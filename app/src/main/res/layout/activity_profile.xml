<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:src="@drawable/profiletoporange"
        android:layout_gravity="end"
        android:layout_margin="0dp"
        android:id="@+id/profiletop"
        >

    </ImageView>



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profileuser"
            android:layout_centerInParent="true"
            android:layout_marginTop="-125dp"
            android:layout_below="@id/profiletop">

        </ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="300dp"
        android:id="@+id/usernameprofile">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/usernameprofile"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/usernamecard"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="15sp"
            android:hint="Enter Your Name">
        </EditText>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail I'd"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/usernamecard"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="20dp"
        android:id="@+id/useremail"
        >

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/useremail"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/useremailcard"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="15sp"
            android:hint="Enter Your E-Mail">
        </EditText>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/useremailcard"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="20dp"
        android:id="@+id/userphno">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/userphno"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/userphnocard"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="15sp"
            android:hint="Enter Your Number">
        </EditText>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/userphnocard"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="20dp"
        android:id="@+id/useraddress">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/useraddress"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="15sp"
            android:hint="Enter Your Address">
        </EditText>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Update"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="64dp"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Log Out"
        android:textStyle="bold"
        android:backgroundTint="@color/orange"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="64dp"></Button>

</RelativeLayout>