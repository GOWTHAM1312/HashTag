<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/imagecard"
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/lightgrey">

                <ImageView
                    android:id="@+id/cartImg"
                    android:layout_width="110dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center"
                    android:src="@drawable/attukalpayasoup" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cartnameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagecard"
                android:layout_margin="10dp"
                android:text="Attukal Paya Soup"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cartquanTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagecard"
                android:layout_below="@id/cartnameTv"
                android:layout_marginLeft="10dp"
                android:text="per 100g"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cartpriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagecard"
                android:layout_below="@id/cartquanTv"
                android:layout_margin="10dp"
                android:text="120"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/cartpriceTv"
                android:layout_below="@id/cartnameTv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/minus" />

                <TextView
                    android:id="@+id/cartnumofitemTv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_margin="5dp" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
