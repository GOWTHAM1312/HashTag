<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/imagecard">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="105dp"
                    android:id="@+id/cartImg"
                    android:src="@drawable/attukalpayasoup"
                    android:layout_gravity="center">
                </ImageView>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagecard"
                android:text="Attukal Paya Soup"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:id="@+id/cartnameTv">
            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagecard"
                android:layout_below="@id/cartnameTv"
                android:text="per 100g"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/cartquanTv">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagecard"
                android:layout_below="@id/cartquanTv"
                android:text="120"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:id="@+id/cartrateTv">
            </TextView>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/cartrateTv"
                android:layout_below="@id/cartnameTv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">
                
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/minus"
                    android:layout_gravity="center"
                    android:id="@+id/minus">
                </ImageView>
                
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:id="@+id/cartnumofitemTv">
                </TextView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus"
                    android:layout_gravity="center"
                    android:id="@+id/plus">
                </ImageView>
            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>