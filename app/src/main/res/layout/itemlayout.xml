<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <androidx.cardview.widget.CardView
                android:layout_width="146dp"
                android:layout_height="145dp"
                android:id="@+id/greycard"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/lightgrey">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="105dp"
                    android:src="@drawable/attukalpayasoup"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/itemimg"
                    >
                </ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attukal Paya Soup"
                android:layout_below="@id/greycard"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="13dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/itemname">
            </TextView>

            <LinearLayout
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/itemname"
                android:id="@+id/rateandquan">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹200"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/green"
                    android:textSize="15dp"
                    android:id="@+id/rate">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="per 250ml"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:layout_gravity="end|center"
                    android:textSize="10dp"
                    android:id="@+id/quan">

                </TextView>
            </LinearLayout>

            <Button
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rateandquan"
                android:text="Add to Cart"
                android:backgroundTint="@color/green"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp">

            </Button>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>